{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Sidecar EQ",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": [
				"-m",
				"sidecar_eq.app"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "Run Smoke Test",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": [
				"tests/smoke_test.py"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "Run All Tests",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": [
				"-m",
				"pytest",
				"tests",
				"-v"
			],
			"problemMatcher": [],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "Format with Black",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": [
				"-m",
				"black",
				"sidecar_eq",
				"tests"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "Lint with Ruff",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": [
				"-m",
				"ruff",
				"check",
				"sidecar_eq",
				"tests"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "Type Check with mypy",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": [
				"-m",
				"mypy",
				"sidecar_eq"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "Install Dev Dependencies",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": [
				"-m",
				"pip",
				"install",
				"--user",
				"-e",
				".[dev]"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "Run Sidecar EQ (one-shot)",
			"type": "shell",
			"command": "/home/todd/sidecar-eq/.venv/bin/python",
			"args": [
				"-m",
				"sidecar_eq.app"
			]
		}
	]
}