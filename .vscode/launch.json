{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Sidecar EQ App",
      "type": "debugpy",
      "request": "launch",
      "module": "sidecar_eq.app",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Debug Current Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v",
        "-s"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Debug All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests",
        "-v"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Debug Smoke Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/tests/smoke_test.py",
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
